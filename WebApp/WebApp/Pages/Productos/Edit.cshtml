@page
@model WebApp.Pages.Productos.EditModel
@{
}

<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue? "Actualizar": "Nuevo Producto")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.Id_Productos" v-model="Entity.Id_Productos" />


                <div class="form-group mb-3">
                    <label for="Entity.Categoria" class="form-label">Categoria</label>

                    <select asp-for="Entity.Categoria" class="form-select" v-model="Entity.Categoria" required>
                        <option value="Abarrotes">Abarrotes</option>
                        <option value="Bebidas">Bedidas</option>
                        <option value="Frutas">Frutas</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" asp-for="Entity.Nombre" v-model="Entity.Nombre" maxlength="250" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.Cantidad_Disponible" class="form-label">Cantidad Disponible</label>
                    <input type="number" class="form-control" asp-for="Entity.Cantidad_Disponible" v-model="Entity.Cantidad_Disponible" min="1" max="9999" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.Caracteristica" class="form-label">Caracteristica</label>
                    <input type="text" class="form-control" asp-for="Entity.Caracteristica" v-model="Entity.Caracteristica" maxlength="250" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.Estado" class="form-label">Estado</label>

                    <select asp-for="Entity.Estado" class="form-select" v-model="Entity.Estado" required>
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                </div>


                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar": "Agregar")
                        </button>
                    </div>

                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts
{

    <script defer src="~/App/Productos/Edit.js"></script>


}