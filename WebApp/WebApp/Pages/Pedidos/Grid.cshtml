@page
@model WebApp.Pages.Pedidos.GridModel
@{
}

<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Pedidos
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bxs-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Cliente</th>
                                <th>Fecha Pedido/th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Subtotal</th>
                                <th>Envio</th>
                                <th>Impuesto</th>
                                <th>Total</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.Codigo</td>
                                <td>@item.Cliente</td>
                                <td>@item.fechaPedido.ToString("dd/MM/yyyy")</td>
                                <td>@item.Producto</td>
                                <td>@item.Cantidad</td>
                                <td>@item.Subtotal</td>
                                <td>@item.Envio</td>
                                <td>@item.Impuestos</td>
                                <td>@item.Total</td>
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.Codigo"><i class='bx bx-edit-alt'></i></a>

                                    <button type="button" class="btn btn-danger" onclick="PedidosGrid.OnClickEliminar(@item.Codigo)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>
                            }
                        </tboby>
                    </table>

                </div>
            </div>



        </div>
    </div>


</div>

@section Scripts{ 

    <script defer src="~/App/Pedidos/Grid.js"></script>
}